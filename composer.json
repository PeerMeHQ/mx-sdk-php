{
  "name": "peerme/mx-sdk-php",
  "description": "MultiversX SDK written in PHP.",
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
  },
  "license": "MIT",
  "autoload": {
    "psr-4": {
      "Peerme\\Mx\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Peerme\\Mx\\Tests\\": "tests"
    }
  },
  "authors": [
    {
      "name": "Micha Vie",
      "email": "micha@peerme.io",
      "homepage": "https://michavie.com"
    }
  ],
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/peermehq"
    }
  ],
  "require": {
    "php": "^8.1",
    "bitwasp/bech32": "^0.0.1",
    "brick/math": "^0.11",
    "simplito/elliptic-php": "^1.0",
    "kornrunner/keccak": "^1.1",
    "illuminate/collections": "^9.0|^10.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.4"
  },
  "config": {
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  }
}
